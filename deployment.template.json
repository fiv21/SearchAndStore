{
  "$schema-template": "1.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "iaepractiacontainerregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_iaepractiacontainerregistry",
                "password": "$CONTAINER_REGISTRY_PASSWORD_iaepractiacontainerregistry",
                "address": "iaepractiacontainerregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "FaceDetector": {
            "version": "14.9",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "rtspUser1": {
                "value": "flanders"
              },
              "rtspPass1": {
                "value": "flanders123"
              },
              "IPCam1": {
                "value": "192.168.1.125"
              },
              "PortCam1": {
                "value": "443"
              },
              "PathCam1": {
                "value": "/videoMain"
              },
              "rtspUser2": {
                "value": "admin"
              },
              "rtspPass2": {
                "value": "admin"
              },
              "IPCam2": {
                "value": "192.168.1.115"
              },
              "PortCam2": {
                "value": "554"
              },
              "PathCam2": {
                "value": "/video/0"
              },
              "connection_string": {
                "value": "$CONTAINER_REGISTRY_STORAGE_iaestorageconnectionstring"
              },
              "container": {
                "value": "$CONTAINER_REGISTRY_BLOB_iaeblobstorageidentifier"
              },
              "scheduleKey": {
                "value": "$CONTAINER_REGISTRY_COSMOSKEY_iaecosmosdbkey"
              },
              "scheduleUrl": {
                "value": "$CONTAINER_REGISTRY_COSMOSENDPOINT_iaecosmosendpoint"
              },
              "databaseIDCosmosDB": {
                "value": "$CONTAINER_REGISTRY_COSMOSDB_iaecosmosdb"
              },
              "containerIDCosmosDB": {
                "value": "$CONTAINER_REGISTRY_COSMOSCONTAINERID_iaecosmoscontainer"
              },
              "SMTPhostAddress": {
                "value": "$CONTAINER_REGISTRY_SMTPSERVER_iaesmtpoutgoingserver"
              },
              "SMTPhostPort": {
                "value": "$CONTAINER_REGISTRY_SMTPPORT_iaesmtpoutgoingport"
              },
              "sender_email": {
                "value": "$CONTAINER_REGISTRY_EMAILUSER_iaeemailusersender"
              },
              "senderEmailPassword": {
                "value": "$CONTAINER_REGISTRY_EMAILPASS_iaeemailpasswordsender"
              },
              "local_connection_string":
              {
                "value": "$CONTAINER_REGISTRY_STORAGE_LOCAL_iaestorageconnectionstring"
              },
              "local_container":
              {
                "value": "$CONTAINER_REGISTRY_BLOB_LOCAL_iaeblobstorageidentifier"
              }
            },
            "settings": {
              "image": "${MODULES.FaceDetector}",
              "createOptions": {}
            }
          },
          "LogsModule": {
            "version": "3.8",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.LogsModule}",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"8080/tcp\":[{\"HostPort\":\"8080\"}]}}}"
            }
          },
          "ScheduleNewClass": {
            "version": "2.3",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "value1CamaraIP": {
                "value": "$CONTAINER_REGISTRY_MACADDRIPCAMERA2_iaeipcameramac2"
              },
              "value2CamaraIP": {
                "value": "$CONTAINER_REGISTRY_MACADDRIPCAMERA2_iaeipcameramac2"
              },
              "scheduleKey": {
                "value": "$CONTAINER_REGISTRY_COSMOSKEY_iaecosmosdbkey"
              },
              "scheduleUrl": {
                "value": "$CONTAINER_REGISTRY_COSMOSENDPOINT_iaecosmosendpoint"
              },
              "databaseIDCosmosDB": {
                "value": "$CONTAINER_REGISTRY_COSMOSDB_iaecosmosdb"
              },
              "containerIDCosmosDB": {
                "value": "$CONTAINER_REGISTRY_COSMOSCONTAINERID_iaecosmoscontainer"
              }
            },
            "settings": {
              "image": "${MODULES.ScheduleNewClass}",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"8086/tcp\":[{\"HostPort\":\"8086\"}]}}}"
            }
          },
          "blobiniotedgedevice": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azure-blob-storage:latest",
              "createOptions": {
                "Env":[
                  "LOCAL_STORAGE_ACCOUNT_NAME=localblobstorage",
                  "LOCAL_STORAGE_ACCOUNT_KEY=OfuGV4ZjVGDc0UYVKgc0bg=="
                 ],
                 "HostConfig":{
                   "Binds": ["edgeblobvolume:/blobroot"],
                   "PortBindings":{
                     "11002/tcp": [{"HostPort":"11002"}]
                   }
                 }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "FaceDetectorToIoTHub": "FROM /messages/modules/FaceDetector/outputs/* INTO $upstream",
          "LogsModuleToIoTHub": "FROM /messages/modules/LogsModule/outputs/* INTO $upstream",
          "ScheduleNewClassToIoTHub": "FROM /messages/modules/ScheduleNewClass/outputs/* INTO $upstream",
          "blobiniotedgedeviceToIoTHub": "FROM /messages/modules/blobiniotedgedevice/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "blobiniotedgedevice":
    {
      "properties.desired": {
        "deviceAutoDeleteProperties": {
          "deleteOn": true,
          "deleteAfterMinutes": 14400,
          "retainWhileUploading": true
        },
        "deviceToCloudUploadProperties": {
          "uploadOn": true,
          "uploadOrder": "OldestFirst",
          "cloudStorageConnectionString": "$CONTAINER_REGISTRY_STORAGE_iaestorageconnectionstring",
          "storageContainersForUpload": {
            "image-frame-onedge": {
              "target": "$CONTAINER_REGISTRY_BLOB_iaeblobstorageidentifier"
            }
          },
          "deleteAfterUpload": true
        }
      }
    }
  }
}